.modal-header
    h3.modal-title Add Admin
.modal-body
    form(name="vm.form").form-horizontal
        .form-group
            .col-sm-12
                input.form-control(type="text" name="name" required placeholder='Name' ng-model="vm.name")
        .form-group
            .col-sm-12
                input.form-control(type="text" name="username" required placeholder='Username' ng-model="vm.username")
        .form-group
            .col-sm-12
                input.form-control(type="password" name="password" required placeholder='Password' ng-model="vm.password")
.modal-footer
    button.btn.btn-primary(ng-click="vm.ok()") Confirm
    button.btn.btn-default(ng-click="$dismiss()") Cancel